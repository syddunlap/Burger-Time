<div class="container">
  <div class="jumbotron">
    <h1>Burger Time!</h1>
  </div>
</div>
<div class="container">
  <div class="row text-center add">
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
      <div class="input text-center">
        <h2 class="heading headTitle" id="add">Add a Burger!</h2>
        <div class="form-group">
          <form method="POST" action="api/burgers" class="addOne text-center">
            <textarea id="textArea" type="text" name="burger_name" rows="2" columns="40"></textarea>
            <br>
            <button id="btnCreate" class="btn btn-dark" type="submit">Submit</button>
          </form>
        </div>
      </div>
    </div>
  </div>
  <div class="main row">
    <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
      <div class="leftBurgers">
        <h2 class="heading headTitle">New Burgers</h2>
        {{#each burgers}} {{#unless this.devoured}}
        <p class="burgerType">{{this.id}}. {{this.burger_name}}
        <form action="api/burgers/{{this.id}}?_method=PUT" method="POST" class="dev">
          <input type="hidden" name="devoured" value="true">
          <button class="btnDevour btn btn-dark" type="submit">Devour it</button>
        </form></p>
        {{/unless}} {{/each}}
      </div>
    </div>
    <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
      <div class="rightBurgers">
        <h2 class="heading headTitle">Burgers Devoured</h2>
        {{#each burgers}} {{#if this.devoured}}
        <p class="burgerType">{{this.id}}. {{this.burger_name}}</p>
        {{/if}} {{/each}}
      </div>
    </div>
  </div>
</div>